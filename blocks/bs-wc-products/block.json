{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "bootstrap-theme/bs-wc-products",
	"title": "WooCommerce Products (Bootstrap Loop)",
	"category": "bootstrap",
	"icon": "products",
	"description": "Display WooCommerce products with Bootstrap styling",
	"attributes": {
		"useThemeDefaults": {
			"type": "boolean",
			"default": true
		},
		"productsPerRow": {
			"type": "number",
			"default": 4
		},
		"productsPerRowMobile": {
			"type": "number",
			"default": 2
		},
		"productsPerPage": {
			"type": "number",
			"default": 12
		},
		"defaultOrderby": {
			"type": "string",
			"default": "menu_order"
		},
		"defaultOrder": {
			"type": "string",
			"default": "ASC"
		},
		"showPagination": {
			"type": "boolean",
			"default": true
		},
		"showOrdering": {
			"type": "boolean",
			"default": true
		},
		"showSearch": {
			"type": "boolean",
			"default": true
		},
		"onlyInStock": {
			"type": "boolean",
			"default": false
		},
		"categories": {
			"type": "array",
			"default": [],
			"items": {
				"type": "number"
			}
		},
		"className": {
			"type": "string",
			"default": ""
		}
	},
	"supports": {
		"className": true,
		"anchor": true,
		"align": true
	},
	"editorScript": "file:./editor.js",
	"render": "file:./block.php"
}
